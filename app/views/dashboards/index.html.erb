<div id="dashboard" class = "swiper-box text-center p-3">
  <div class="top text-center">
    <br>
    <h7 class="city"><%=@user_preferences.address%></h7><br>
    <h7 class="date"></h7><br>
    <h7 class="month"></h7>
    <h7 class="time"></h7>
  </div>
  <br>
  <div class="float-left pl-4">
    <h1 class="condition"></h1>
    <p class="temp text-light"></p>
  </div>
<br>
<%= image_tag  "cloud2.png",:class => "weather_image cloud" %>
<%= image_tag "raincloud.png", :class => "weather_image raincloud" %>
<% if @user_preferences.avatar == "female"%>
<%= image_tag "standing-female", :class => "avatar_image" %>
<% else %>
<%= image_tag "standing-male", :class => "avatar_image" %>
<% end%>

  <div class="icon-bar pb-1 mt-2 pr-2">
    <a href="/preferences"><i class="fas fa-user-cog"></i></a>
    <a href="/forecast"><i class="fas fa-chevron-down"></i></a>
    <a href="#"> <i class="far fa-paper-plane"></i></a>
    <a href="/wardrobe/new"><i class="fas fa-tshirt"></i></a>
  </div>
</div>


<script type="text/javascript">
<%= render 'dashboard.js' %>
</script>
