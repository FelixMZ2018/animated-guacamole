<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>


<div id="dashboard" class = "swiper-box text-center">
  <br>
  <a class="right" href="/forecast"><i class="fas fa-chevron-right"></i></a>
  <div class="date-description">
    <br>
    <h7 class="city"><%=@user_preferences.address%></h7><br>
    <h7 class="date"></h7><br>
    <h7 class="month"></h7>
    <h7 class="time"></h7>
  </div>
  <br>
  <div class="float-left pl-4 pb-3">
    <h1 class="condition"></h1>
    <p class="temp text-light"></p>
  </div>
<br>
<%= image_tag  "cloud2.png",:class => "weather_image cloud" %>
<%= image_tag "raincloud.png", :class => "weather_image raincloud" %>
<div id = "avatar_composite">
<div class = "bottom"><div id="Wardrobe_bottom"></div></div>
<div class = "head"><div id="avatar_head"></div></div>
<div class = "top"><div id="Wardrobe_top"></div></div>
</div>

<%# if @user_preferences.avatar == "female"%>
<%#= image_tag "standing-female", :class => "avatar_image" %>
<%# else %>
<%#= image_tag "standing-male", :class => "avatar_image" %>
<%# end%>
<div class="greeting">
  Hello, <%= @current_user.user_preference.name %>.
  <br>The sky is clear and starry.
  <br>Its getting chilly so take a jacket with you!
</div>

  <div class="icon-bar">
    <a href="/wardrobe"><i class="fas fa-tshirt"></i><p>Wardrobe</p></a>
    <a href="/trips/new"> <i class="far fa-paper-plane"></i><p>Travel Plan</p></a>
    <a href="/preferences"><i class="fas fa-user"></i><p>Account</p></a>
  </div>
</div>


<script type="text/javascript">
<%= render 'dashboard.js' %>
</script>
