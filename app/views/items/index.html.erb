<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<div class="container-wardrobe">
<br>
    <a class="ml-4" href="/dashboards"><i class="fas fa-chevron-left icon-back "></i></a>
    <br>
    <br>

    <div class="container text-center">
        <h1 class="headline"><%= "My Wardrobe Items:"  %></h1>
        <br>
        <strong>
            <p class="sub-headline"> Add a new Wardrobe Item <a class="pl-2" href="/wardrobe/new"><i class="fas fa-plus"></i></a> </p>
        </strong>
        <br>
        <div id="carouselExampleControls" data-interval=false class="carousel slide" data-ride="carousel">


            <div class="carousel-inner">
                <% @items.each_with_index do |item, i| %>
                <div class="carousel-item  <%= i == 0 ? 'active' : '' %>">
                    <div class="card-deck" style="width: 100%;">
                        <%= item.render_string.html_safe %>
                        <div class="card-body">
                            <p class="card-title"><strong>Name:</strong> <%= item.wardrobe_template.category %></p>
                            <p class="card-text"><strong>Lowest temperature:</strong> <%= item.lowest_temperature %></p>
                            <p class="card-text"><strong>Highest temperature:</strong> <%= item.highest_temperature %></p>
                            <%= link_to delete_path(item), method: :delete, class: "delete" ,method: :delete, data: { confirm: 'Are you sure you want to delete' } do %>
                            <i class="far fa-trash-alt"></i>
                            <% end %>
                        </div>
                    </div>
                </div>

                <% end %>

            </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
</div>
<div class="icon-bar">
    <a href="/temperatures/new"><i class="fas fa-temperature-low"></i></a>
    <a href="/wardrobe"><i class="fas fa-tshirt"></i></a>
    <a href="/trips/new"> <i class="far fa-paper-plane"></i></a>
    <a href="/preferences"><i class="fas fa-user"></i></a>
  </div>
</div>

