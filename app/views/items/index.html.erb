<div class="container-wardrobe">
  <a class="ml-4" href="/dashboards"><i class="fas fa-chevron-left"></i></a>
  <br>
  <br>
  <div class="container text-center">
    <h1><%= "My Wardrobe Items:"  %></h1>
    <br>

<% @items.each do |item| %>
  <div>
    <p>Name: <%= item.item_name %></p>
    <p>Category: <%= item.wardrobe_template.category %></p>
    <p>Image</p>
    <p>Lowest temperature: <%= item.lowest_temperature %></p>
    <p>Highest temperature: <%= item.highest_temperature %></p>
  </div>
<% end %>

</div>
<br>
    <strong><p class="ml-5"> Add a new Wardrobe Item <a class="pl-2" href="/wardrobe/new"><i class="fas fa-plus"></i></a> </p></strong>
</div>
