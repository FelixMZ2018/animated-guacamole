<div class="container">
<h1> Customize your wardrobe <h2>

 <div class="m-3">

        <h4>Add an Item </h4>
        <%= simple_form_for @item do |f| %>
        <%= f.association :wardrobe_template, label_method: :category, include_blank: false %>
        <%= f.input :item_name, label: "Item Name"%>
        <%= f.input :lowest_temperature, collection: ["freezing", "cold", "just right", "warm", "hot" ], label: "Lowest Temperature"%>
        <%= f.input :highest_temperature, collection: ["freezing", "cold", "just right", "warm", "hot"], label: "Highest Temperature"%>
        <%= f.submit 'Save', class: 'btn btn-success m-2' %>
        <% end %>
        </div>
    </div>

    </div>

<input type="range" list="tickmarks">

<datalist id="tickmarks">
  <option value="0" label="0%"></option>
  <option value="10"></option>
  <option value="20"></option>
  <option value="30"></option>
  <option value="40"></option>
  <option value="50" label="50%"></option>
  <option value="60"></option>
  <option value="70"></option>
  <option value="80"></option>
  <option value="90"></option>
  <option value="100" label="100%"></option>
</datalist>
